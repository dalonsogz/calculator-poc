{
  "openapi": "3.0.0",
  "info": {
    "title": "Calculator API",
    "version": "1.0.0",
    "description": "Caculator API to perform basic operations"
  },
  "paths": {
    "/calculator": {
      "post": {
        "summary": "Generic operation",
        "operationId": "calculate",
        "requestBody": {
          "description": "Generic simple operation input parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstOp": {
                    "type": "number",
                    "format": "BigDecimal"
                  },
                  "secondOp": {
                    "type": "number",
                    "format": "BigDecimal"
                  },
                  "operation": {
                    "type": "string"
                  }
                }, "required": ["firstOp", "secondOp", "operation"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "number",
                  "format": "BigDecimal"
                }
              }
            }
          }
        }
      }
    }
  }
}